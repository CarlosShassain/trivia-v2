extends layout
block content
  section#main-slider.no-margin
   div(class="carousel slide wet-asphalt")
    div(class="carousel-inner")
     div(class="item active", style="background-image: url(/images/slider/bg1.jpg)")
      div(class="container")
       div(class="row")
        div(class="col-sm-12")
         div(class="carousel-content centered")
          h2(class="animation animated-item-1") Crear Sala
          div(class="row")
           aside(class="col-sm-4 col-sm-push-8")
           
           div(class="col-sm-8 col-sm-pull-4")
            div(class="blog")
             div(class="blog-item",style="background-image: url(/images/form/form2.jpg)")
              div(class="container page")
               div(class="row")
                div(class="col-xs-2")
                div(class="col-xs-8")
                 section(id="crearSala", class="container")
                  div(class="row")
                   div(class="col-sm-6")
                    h2 Crear Nueva Partida
                    form(class="center",role="form", action="/espera/")
                     fieldset(class="resgistration-form")
                      div(class="form-group") Titulo
                       input(type="text", id="titulo", name="titulo", placeholder="Titulo" class="form-control")
                      div(class="form-group")
                        div(class="radio")
                         label() privado
                          input(type="radio" name="tipo", value="privado")
                       div(class="col-ms-6")
                        div(class="radio")
                         label() publico
                          input(type="radio" name="tipo" value="publico", checked)
                      div(class="form-group") Nro de Preguntas
                       select(class="form-control", placeholder="Preguntas", name="pregunta")
                        option(value="5") 5
                        option(value="10") 10
                        option(value="15") 15
                        option(value="20") 20
                      div(class="form-group") Tiempo de Respuesta
                       select(class="form-control", placeholder="Preguntas", name="tiempo")
                        option(value="10") 10 segundos
                        option(value="15") 15 segundos
                        option(value="20") 20 segundos
                        option(value="25") 25 segundos
                        option(value="30") 30 segundos
                        option(value="35") 35 segundos
                        option(value="40") 40 segundos
                        option(value="45") 45 segundos
                        option(value="50") 50 segundos
                        option(value="55") 55 segundos
                        option(value="60") 60 segundos
                      div(class="form-group") 
                       label() Radios
                       div(class="col-ms-10")
                        div(class="radio")
                         label() cat1
                          input(type="radio" name="categoria1")
                       div(class="col-ms-10")
                        div(class="radio")
                         label() cat2
                          input(type="radio" name="categoria2")
                       div(class="col-ms-10")
                        div(class="radio")
                         label() cat3
                          input(type="radio" name="categoria3")
                      div(class="form-group")
                       input(type="submit", class="btn btn-primary",value="crear")
                   div(class="col-sm-6")
                    h2 Partidas 
                    div
                     div(class="progress")
                      div(class="progress-bar progress-bar-danger", role="progressbar", aria-valuenow="90", aria-valuemin="0", aria-valuemax="100", style="width: 90%;")
                       span Partidas Ganadas
                     div(class="progress")
                      div(class="progress-bar progress-bar-success", role="progressbar", aria-valuenow="70", aria-valuemin="0", aria-valuemax="100", style="width: 70%;")
                       span Partidas Perdidas
                     div(class="progress")
                      div(class="progress-bar", role="progressbar", aria-valuenow="40", aria-valuemin="0", aria-valuemax="100", style="width: 40%;")
                       span Partidas Empatadas
    div#content